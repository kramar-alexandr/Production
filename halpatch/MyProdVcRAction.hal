function LongInt MyProdVcRecordDuplicate(var record MyProdVc MyProdr,record MyProdVc MyProd2r,LongInt long1,LongInt long2)
BEGIN
  LongInt res;
  Time bt;
  record ProdSettingsBlock PSb;
  row MyProdVc MyProdrw;
  Integer i,rwcnt;

  BlockLoad(PSb);
  res = 0;
  MyProdr.SerNr = -1;
